{
    "name": "cspsupport",
    "displayName": "CSP Language Support",
    "description": "Supports syntax highlighting for machine-readable CSP",
    "version": "0.0.6",
    "publisher": "LongPham",
    "engines": {
        "vscode": "^1.15.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/LongPham7/VSCode-CSP-Support"
    },
    "icon": "resources/icon.png",
    "keywords": [
        "CSP", 
        "syntax highlight"
    ],
    "categories": [
        "Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "csp",
            "aliases": ["CSP", "csp", "Communicating Sequential Processes"],
            "extensions": [".csp"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "csp",
            "scopeName": "source.csp",
            "path": "./syntaxes/csp.tmLanguage.json"
        }]
    }
}